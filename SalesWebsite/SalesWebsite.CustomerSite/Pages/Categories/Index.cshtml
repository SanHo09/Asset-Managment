@page
@model SalesWebsite.CustomerSite.Pages.Categories.IndexModel;
@{
    ViewData["title"] = "Shepoo Wakanda  | Phân Loại ";
    ViewData["categories"] = @Model.categories;
    ViewData["userName"] = @Request.Cookies["userName"];
    Layout = "layout/_CategoriesLayout";
}

<div class="col-sm-9">
    <div class="row">
        <div class="alert alert-secondary text" role="alert">
            Sắp xếp theo
            <button class="btn btn-dark btn-outline-light" type="submit"
                    style=" background-color: #f94e30 !important;">
                Phổ biến
            </button>
            
        </div>
    </div>
    <div class="row">
        

        @foreach (var category in Model.categories.Items)
        {
            foreach(var product in category.Products)
            {
                <div class="card col-sm-2 product">
                    <a href="../Products/Detail?id=@product.Id" class="">
                        <img class="card-img-top" src="@product.image"
                         alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <p class="card-text"><b></b>@product.Name</p>
                        <span class="price">@product.Price đ</span><br>

                        <span class="number">Đã bán: @((float)product.Sold/1000) k</span>

                    </div>
                </div>
            }
        }


    </div>
</div>


