@page
@model SalesWebsite.CustomerSite.Pages.Categories.IndexModel;
@{
    ViewData["title"] = "Shepoo Wakanda  | Phân Loại ";
    ViewData["categories"] = @Model.categories;
    Layout = "layout/_CategoriesLayout";
}

<div class="col-sm-9">
    <div class="row">
        <div class="alert alert-secondary text" role="alert">
            Sắp xếp theo
            <button class="btn btn-dark btn-outline-light" type="submit"
                    style=" background-color: #f94e30 !important;">
                Phổ biến
            </button>
            <button class="btn btn-light " type="submit"> Bán chạy</button>
            <button id="price" class="btn btn-light ">Giá: giảm dần</button>
        </div>
    </div>
    <div class="row">
        

        @foreach (var i in Model.products.Items)
        {
            <div class="card col-sm-2 product">
                <a href="../Products/Detail?id=@i.Id" class="">
                    <img class="card-img-top" src="images/product/@i.image"
                     alt="Card image cap">
                </a>
                <div class="card-body">
                    <p class="card-text"><b></b>@i.Name</p>
                    <span class="price">@i.Price đ</span><br>

                    <span class="number">đã bán: @i.Sold K</span>

                </div>
            </div>
        }


    </div>
</div>


