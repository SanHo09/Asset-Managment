@page
@model SalesWebsite.CustomerSite.Pages.Customer.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["title"] = "Shepoo Wakanda| Đăng Ký";
    ViewData["type"] = "Đăng Ký";
    Layout = "layout/_CustomerLayout";
}
<form id="frm" class="bg-white login-form" asp-page-handler="register" method="post" name="frmLogin" onsubmit="return validate();">
    <div class="container ">
        <legend style="margin-top: 10px;">
            Đăng Ký
            <svg xmlns="http://www.w3.org/2000/svg" style="margin-left: 100px;"
                 width="50" height="50" fill="currentColor"
                 class="bi bi-qr-code-scan" viewBox="0 0 16 16">
                <path d="M0 .5A.5.5 0 0 1 .5 0h3a.5.5 0 0 1 0 1H1v2.5a.5.5 0 0 1-1 0v-3Zm12 0a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0V1h-2.5a.5.5 0 0 1-.5-.5ZM.5 12a.5.5 0 0 1 .5.5V15h2.5a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5v-3a.5.5 0 0 1 .5-.5Zm15 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1 0-1H15v-2.5a.5.5 0 0 1 .5-.5ZM4 4h1v1H4V4Z" />
                <path d="M7 2H2v5h5V2ZM3 3h3v3H3V3Zm2 8H4v1h1v-1Z" />
                <path d="M7 9H2v5h5V9Zm-4 1h3v3H3v-3Zm8-6h1v1h-1V4Z" />
                <path d="M9 2h5v5H9V2Zm1 1v3h3V3h-3ZM8 8v2h1v1H8v1h2v-2h1v2h1v-1h2v-1h-3V8H8Zm2 2H9V9h1v1Zm4 2h-1v1h-2v1h3v-2Zm-4 2v-1H8v1h2Z" />
                <path d="M12 9h2V8h-2v1Z" />
            </svg>
        </legend>

        <div class="input-place">
            <div class="inputGroup">
                <input placeholder="Email/Số Điện Thoại/Tên Đăng Nhập"
                       name="userName" type="text" id="userName" onclick="removeError()"
                       class="form-control" aria-describedby="passwordHelpBlock" form-fmt
                       required>
                <div class="form-text error">
                    <span id="chkUserName" style="display: none">Tên người dùng phải có độ dài lớn hơn 6</span>
                </div>
            </div>

            <div class="inputGroup">
                <input placeholder="Họ tên" name="fullName" onclick="removeError()"
                       type="text" class="form-control" id="fullName"
                       aria-describedby="passwordHelpBlock" form-fmt required>
                <div class="form-text error">
                    <span id="chkFullName" style="display: none">Họ tên không đúng định dạng</span>
                </div>
            </div>

            <div class="inputGroup">
                <input placeholder="Mật Khẩu" name="password" type="password"
                      class="form-control" id="password" onclick="removeError()"
                       aria-describedby="passwordHelpBlock" form-fmt required>
                <div class="form-text error">
                    <span id="chkPassword" style="display: none">Mật khẩu phải có độ dài lớn hơn 6</span>
                </div>
            </div>

            <div class="inputGroup">
                <input placeholder="Nhập Lại Mật Khẩu" name="confirmPassword" onclick="removeError()"
                       type="Password" class="form-control" id="confirmPassword"
                       aria-describedby="passwordHelpBlock" form-fmt required>
                <div class="form-text error">
                    <span id="chkConfirmPassword" style="display: none">2 Mật khẩu không trùng nhau</span>
                </div>
            </div>
            <button class="btn-lg btn-block col-sm-12 sign-in">
                Đăng Ký
            </button>
            <small id="loginFm" style="color: #f94e30;">
                @Model.Error
            </small>


            <div class="signUp text-center">
                <span>Đã có tài khoản <a href="/Customer/login">Đăng Nhập</a></span>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1"
             aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control"
                                   placeholder="Nhập tài khoản" aria-label="Recipient's username"
                                   aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="button"
                                    id="button-addon2">
                                Button
                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Đóng
                        </button>
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</form>

<script>
    function validate() {
        var userName = document.getElementById("userName").value;
        var fullName = document.getElementById("fullName").value;
        var password = document.getElementById("password").value;
        var confirmPassword = document.getElementById("confirmPassword").value;
         alert(userName + fullName + password + confirmPassword)
       if (userName.length < 6 || password.length < 6 || fullName.length < 6 || confirmPassword != password) {
           if (userName.length < 6) {
                document.getElementById("chkUserName").style.display = "block";
           } 
           if(fullName.length < 6) {
                document.getElementById("chkFullName").style.display = "block";
           } 
           if (password.length < 6) {
               document.getElementById("chkPassword").style.display = "block";
           }
           if (password != confirmPassword) {
               document.getElementById("chkConfirmPassword").style.display = "block";
           }
           return false;
       }
       else {
           removeError();
           return true;
       }
     return false;
    }

    function removeError() {
        document.getElementById("chkUserName").style.display = "none";
        document.getElementById("chkPassword").style.display = "none";
        document.getElementById("chkFullName").style.display = "none";
        document.getElementById("chkConfirmPassword").style.display = "none";
        document.getElementById("loginFm").style.display = "none";
    }
</script>