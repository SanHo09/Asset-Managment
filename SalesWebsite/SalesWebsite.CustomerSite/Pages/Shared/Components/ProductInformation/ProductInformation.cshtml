@model SalesWebsite.CustomerSite.ViewModel.ProductVm
<div class="container productDetail" style="height: 500px; background-color: white;">
    <div class="row productDetail-title align-middle">
        <span>CHI TIẾT SẢN PHẨM</span>
    </div>
    <div class="row">
        <div class="col-sm-2">Danh mục</div>
        <div class="col-sm-10">@Model.Category.Name</div>
    </div>
    <div class="row">
        <div class="col-sm-2">Ngày đăng bán</div>
        <div class="col-sm-10">@Model.CreatedDate</div>
    </div>
    <div class="row">
        <div class="col-sm-2">Đã bán</div>
        <div class="col-sm-10">@Model.Sold </div>
    </div>
