                <br>
                <div class="row">

                    @await Html.PartialAsync("../common/Categories/_categoriesBanner.cshtml")

                    <br><br>
                    <!--content-->
                    <div class="container justify-content-center suggest" style="margin-top: 30px;">

                        <div class="row">
                            
                            @await Component.InvokeAsync("categoriesAside", ViewData["categories"])

                            <!--product List-->
                            @RenderBody()
                        </div>
                    </div>

                    <br>


                    <br>
                    <br>
                    <br>

                </div>
            </div>
            <br>
            <br>
            <!-- Footer -->
            @await Html.PartialAsync("../common/_Footer.cshtml")
            <!-- Footer -->
        </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
