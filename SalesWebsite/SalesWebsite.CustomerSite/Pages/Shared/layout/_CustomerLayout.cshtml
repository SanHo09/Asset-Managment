<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="/images/classify/shopee.png" type="image/gif" sizes="16x16">
    <link rel="stylesheet" href="~/css/Customer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="js/angular-route.js"></script>

</head>

<body ng-app="myApp">
	<!-- navbar -->
    @await Html.PartialAsync("../common/Customers/_Customerheader.cshtml")
    
    <div class="container-fluid" style="background-color: #f94e30; height: 620px;">
        <div class="row content">
        	<!-- banner -->
            @await Html.PartialAsync("../common/Customers/_CustomerBanner.cshtml")
            <div class="col-sm-5 justify-content-center">
                <div> 
                  <div ng-controller="signInCtrl">
                  		<!--  Form -->
                   	 @RenderBody()
                  </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
  	@await Html.PartialAsync("../common/_Footer.cshtml")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    
</body>

</html>